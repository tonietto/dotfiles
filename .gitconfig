[user]
	email = tonietto@gmail.com
	name = Gustavo Tonietto
	signingkey = 1EEF93ED26A27A7F
[push]
	default = simple
[core]
	editor = vim
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[help]
	autocorrect = -1
[alias]
	m = merge
	b = branch
	c = commit
	st = status
	sc = switch
	co = checkout
	scc = switch -c
	f = fetch --all -p
	ready = rebase -i @{u}
	pushup = push --set-upstream origin
[commit]
	gpgsign = true
[gpg]
	program = gpg
[diff]
	ignoreSubmodules = dirty
[status]
	short = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
